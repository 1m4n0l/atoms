body > article
  position: relative
  width: 100%
  z-index: 1

  display-box()
  backface-visibility hidden
  vendor(animation-fill-mode, forwards)

  &:not(.active)
    visibility: hidden
    & > section
      display: none

  &.active
    visibility: visible
    & > section.active
      display: block

  &.aside
    transform: translateX(ASIDE_WIDTH)

  & > section
    display: none
